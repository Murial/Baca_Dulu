<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/pdfRl"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:background="@color/gray"
            android:layout_marginEnd="5dp">

            <!-- PDF View-->
            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <!-- PDF Title-->
        <TextView
            android:id="@+id/pdfTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="Book Title"
            android:layout_toEndOf="@id/pdfRl"
            android:maxLines="1"/>

        <!-- PDF Desc-->
        <TextView
            android:id="@+id/pdfDesc"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Description"
            android:layout_toEndOf="@+id/pdfRl"
            android:layout_below="@id/pdfTitle"
            android:maxLines="4"
            android:ellipsize="end"/>

        <!-- PDF Category-->
        <TextView
            android:id="@+id/pdfCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:text="Category"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"/>

        <!-- PDF Size-->
        <TextView
            android:id="@+id/pdfSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 MB"
            android:layout_toEndOf="@id/pdfRl"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            />

        <!-- PDF Date Added-->
        <TextView
            android:id="@+id/pdfDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_toEndOf="@id/pdfSize"
            android:layout_toStartOf="@id/pdfCategory"
            android:text="dd/mm/yyy"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            />



    </RelativeLayout>



</androidx.cardview.widget.CardView>